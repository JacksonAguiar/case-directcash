generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(uuid())
  type      String
  name      String
  email     String
  value     Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([timestamp])
  @@map("events")
}
